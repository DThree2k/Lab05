<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/idRelativeLayout"
    android:layout_height="130dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/round"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:gravity="center"
        android:background="@drawable/round"
        android:src="@drawable/donut_yellow_1"
        />

    <TextView
        android:id="@+id/tvTitleProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/logo"
        android:text="Tasy Donut"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvTitleShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleProduct"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/logo"
        android:text="Spicy tasty donut family"

        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleShop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/logo"
        android:text="$10.00"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Chat"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:background="#F4DDDD"
        android:src="@drawable/plus_button"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>